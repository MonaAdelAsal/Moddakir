<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_white_background"
    xmlns:tools="http://schemas.android.com/tools">
    <com.moddakir.mylibrary.view.widget.TextViewCalibriBold
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="13dp"
        android:padding="8dp"
        android:text="@string/are_you_achieving_your_goal_with_this_amount_of_your_plan"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plan_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="13dp"
        android:paddingBottom="13dp"
        android:background="@drawable/rounded_white_background"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv">


        <com.moddakir.mylibrary.view.widget.TextViewUniqueLight
            android:id="@+id/from_surah_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/fromsoura"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toStartOf="@id/from_aya_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.moddakir.mylibrary.view.widget.TextViewUniqueLight
            android:id="@+id/from_aya_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fromaya"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/to_surah_tv"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.moddakir.mylibrary.view.widget.TextViewUniqueLight
            android:id="@+id/to_surah_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fromsoura"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toStartOf="@id/to_aya_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/from_surah_tv" />

        <com.moddakir.mylibrary.view.widget.TextViewUniqueLight
            android:id="@+id/to_aya_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fromaya"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/to_surah_tv"
            app:layout_constraintTop_toTopOf="@+id/to_surah_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.moddakir.mylibrary.view.widget.ButtonCalibriBold
        android:id="@+id/btn_yes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_primary_active_button"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:layout_marginStart="65dp"
        android:paddingBottom="8dp"
        android:text="@string/yes"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan_container"/>
    <com.moddakir.mylibrary.view.widget.ButtonCalibriBold
        android:id="@+id/btn_no"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_primary_active_button"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="8dp"
        android:layout_marginEnd="65dp"
        android:text="@string/no"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan_container" />

</androidx.constraintlayout.widget.ConstraintLayout>